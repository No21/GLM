<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ensai.glm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_glm"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_glm"
        android:roundIcon="@mipmap/ic_glm"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme"
        android:fullBackupContent="true"
        >



        <activity
            android:name="com.example.ensai.glm.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Prefer"></activity>
        <activity android:name=".Info"></activity>

        <receiver
            android:name="com.example.ensai.glm.RecepteurSms"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">

            <intent-filter
                android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>


    </application>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

</manifest>
